<Window x:Class="InvoiceRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceRegister"
        mc:Ignorable="d"
        Title="Fakturomat" Height="450" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="Dodaj">
                <MenuItem Header="Nowa"/>
                <MenuItem Header="Import">
                    <MenuItem Header="PDF" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Eksport rejestru">
                <MenuItem Header="CSV"/>
                <MenuItem Header="XLSX"/>
            </MenuItem>
            <MenuItem Header="Dane Podmiotu" />
            <MenuItem Header="Opcje"/>
        </Menu>
        <StackPanel DockPanel.Dock="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label  Content="Wyszukaj (Nazwa, NIP, Numer faktury, Kwota)" />
                <TextBox Grid.Column="1" VerticalContentAlignment="Center" MaxHeight="150"/>

            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" >
                <RadioButton Content="Sprzedaż" Margin="10,0" IsChecked="True"/>
                <RadioButton Content="Zakup"/>
            </StackPanel>
            <DataGrid Grid.ColumnSpan="2" ItemsSource="{Binding Path=InvoiceViewModel.Invoices}" AutoGenerateColumns="False" IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Nazwa klienta" Binding="{Binding Path=Purchaser.Name}"/>
                    <DataGridTextColumn Width="*" Header="NIP" Binding="{Binding Path=Purchaser.Nip}"/>
                    <DataGridTextColumn Width="*" Header="Numer faktury" Binding="{Binding Path=InvoiceNumber}"/>
                    <DataGridTextColumn Width="auto" Header="Rodzaj"/>
                    <DataGridTextColumn Width="*" Header="Data wystawienia" Binding="{Binding Path=DateOfIssue, StringFormat=yyyy-MM-dd}"/>
                    <DataGridTextColumn Width="auto" Header="Data VAT" />
                    <DataGridTextColumn Width="*" Header="Data płatności" Binding="{Binding Path=DateOfPayment, StringFormat=yyyy-MM-dd}" />
                    <DataGridTextColumn Width="*" Header="Kwota" Binding="{Binding Path=TotalSumOfValueProductsOrServices}"/>
                    <DataGridTextColumn Width="auto" Header="Płatności" Binding="{Binding Path=Payment}"/>
                    <DataGridTemplateColumn Width="*" Header="Status">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=Status}" Value="True">
                                                    <Setter Property="Text" Value="Zapłacona"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=Status}" Value="False">
                                                    <Setter Property="Text" Value="Nie zapłacona"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>


            </DataGrid>

        </StackPanel>
    </DockPanel>

</Window>
